<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#CA0606"
    android:background="@color/changed_red"
    tools:context=".Activities.HomeFragment">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="413dp"
        android:layout_height="387dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_switch"
        app:layout_constraintVertical_bias="0.0">

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="148dp"
        android:layout_height="144dp"
        android:background="@drawable/round_button_shape"
        android:src="@drawable/default_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136" />

    <LinearLayout
        android:layout_width="208dp"
        android:layout_height="140dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toEndOf="@+id/profilePic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.137">

        <TextView
            android:id="@+id/hosp_fullNameTextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/nametag_oval"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="2dp"
            android:gravity="clip_vertical"
            android:text="YourName"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/hosp_emailTextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/nametag_oval"
            android:drawableStart="@drawable/ic_mail_profile"
            android:drawablePadding="2dp"
            android:text="YourEmail"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bloodTypeTextView"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:background="@drawable/nametag_oval"
            android:drawableStart="@drawable/ic_blood_drop"
            android:textAlignment="center"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_switch"
        android:layout_width="414dp"
        android:layout_height="50dp"
        android:background="@drawable/borders_home_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433">

        <TextView
            android:id="@+id/textViewWithSwitch"
            android:layout_width="186dp"
            android:layout_height="28dp"
            android:layout_marginStart="35sp"
            android:layout_marginTop="10sp"
            android:text="@string/textViewWithSwitch"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switchBtn"
            android:layout_width="92dp"
            android:layout_height="28dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>